# =============================================================================
# DJANGO CORE SETTINGS
# =============================================================================

# Environment: dev, prod
DJANGO_ENV=dev

# Secret key for cryptographic signing (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-dev-secret-key-change-this-in-production

# Debug mode (should be False in production)
DEBUG=True

# Allowed hosts (comma-separated list)
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
#
# NOTE: This configuration is optimized for Docker Compose.
# For local development without Docker, change HOST values:
{%- if use_psql %}
# - POSTGRES_HOST=localhost (instead of 'postgres')
{%- else %}
# - MYSQL_HOST=localhost (instead of 'mysql')
{%- endif %}
#
# =============================================================================

{%- if use_psql %}
# PostgreSQL Configuration
POSTGRES_DB={{project_slug}}_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_postgres_password_change_me
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
{%- else %}
# MySQL Configuration
MYSQL_DATABASE={{project_slug}}_db
MYSQL_USER={{author_username}}
MYSQL_PASSWORD=dev_mysql_password_change_me
MYSQL_ROOT_PASSWORD=dev_mysql_root_password_change_me
MYSQL_HOST=mysql
MYSQL_PORT=3306
{%- endif %}
