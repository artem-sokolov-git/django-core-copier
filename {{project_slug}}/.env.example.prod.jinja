# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================
#
# WARNING: This file contains production configuration examples.
# DO NOT use these values as-is. Generate secure passwords and keys!
#
# =============================================================================

# Environment (must be 'prod' for production)
DJANGO_ENV=prod

# SECRET KEY - GENERATE A NEW ONE FOR PRODUCTION!
# Use: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secure-production-key-generate-new-one

# Debug must be False in production
DEBUG=False

# REQUIRED: Set your production domain(s)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# =============================================================================
# DATABASE SETTINGS (Production)
# =============================================================================

{%- if use_psql %}
# PostgreSQL Production Configuration
POSTGRES_DB={{project_slug}}_prod_db
POSTGRES_USER={{project_slug}}_user
POSTGRES_PASSWORD=secure_psql_password_generate_new_one
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
{%- else %}
# MySQL Production Configuration
MYSQL_DATABASE={{project_slug}}_prod_db
MYSQL_USER={{author_username}}_prod
MYSQL_PASSWORD=secure_mysql_password_generate_new_one
MYSQL_ROOT_PASSWORD=secure_mysql_root_password_generate_new_one
MYSQL_HOST=your-mysql-host
MYSQL_PORT=3306
{%- endif %}
